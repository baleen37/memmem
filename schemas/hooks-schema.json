{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Claude Plugin Hooks",
  "type": "object",
  "required": ["hooks"],
  "properties": {
    "description": {"type": "string"},
    "hooks": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["matcher", "hooks"],
            "properties": {
              "matcher": {"type": "string"},
              "hooks": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["type"],
                  "properties": {
                    "type": {"type": "string", "enum": ["command", "prompt", "agent"]},
                    "command": {"type": "string"},
                    "prompt": {"type": "string"},
                    "timeout": {"type": "number", "minimum": 5, "maximum": 600}
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
