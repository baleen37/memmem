{
  "$schema": "../../schemas/hooks-schema.json",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume|clear|compact",
        "hooks": [
          {
            "type": "command",
            "command": "PLUGIN_ROOT=\"${CLAUDE_PLUGIN_ROOT:-$(sh \"$HOME/.claude/cpr.sh\" memmem@baleen-marketplace)}\"; node \"$PLUGIN_ROOT/dist/cli.mjs\" inject",
            "timeout": 1000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "PLUGIN_ROOT=\"${CLAUDE_PLUGIN_ROOT:-$(sh \"$HOME/.claude/cpr.sh\" memmem@baleen-marketplace)}\"; node \"$PLUGIN_ROOT/dist/cli.mjs\" observe",
            "async": true
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "PLUGIN_ROOT=\"${CLAUDE_PLUGIN_ROOT:-$(sh \"$HOME/.claude/cpr.sh\" memmem@baleen-marketplace)}\"; node \"$PLUGIN_ROOT/dist/cli.mjs\" observe --summarize",
            "async": true
          }
        ]
      }
    ]
  }
}
