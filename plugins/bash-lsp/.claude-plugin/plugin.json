{
  "name": "bash-lsp",
  "version": "5.0.0",
  "description": "Bash Language Server integration for Claude Code - provides autocomplete, diagnostics, and navigation for Bash scripts",
  "author": {
    "name": "Jiho"
  },
  "keywords": [
    "bash",
    "lsp",
    "language-server",
    "shell",
    "shellscript"
  ],
  "lspServers": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "extensionToLanguage": {
        ".sh": "bash",
        ".bash": "bash",
        ".bats": "bash"
      }
    }
  }
}
