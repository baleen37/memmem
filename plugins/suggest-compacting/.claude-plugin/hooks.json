{
  "hooks": {
    "SessionStart": [
      {
        "matcher": ".*",
        "hooks": [{
          "type": "command",
          "command": "npx tsx ${CLAUDE_PLUGIN_ROOT}/src/hooks/session-start.ts"
        }]
      }
    ],
    "PreToolUse": [
      {
        "matcher": ".*",
        "hooks": [{
          "type": "command",
          "command": "npx tsx ${CLAUDE_PLUGIN_ROOT}/src/hooks/auto-compact.ts"
        }]
      }
    ]
  }
}
