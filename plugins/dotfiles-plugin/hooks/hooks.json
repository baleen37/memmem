{
  "description": "Git command validation hooks for enforcing quality standards",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/git-command-validator.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
