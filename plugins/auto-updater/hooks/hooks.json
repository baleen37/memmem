{
  "$schema": "../../../schemas/hooks-schema.json",
  "description": "Auto-updater hooks - checks for plugin updates on session start",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/auto-update-hook.sh"
          }
        ]
      }
    ]
  }
}
